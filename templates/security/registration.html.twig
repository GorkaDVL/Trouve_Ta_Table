{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}

	<br>
	<h1 class="text-center">Inscription</h1>

	<div class="container ">

		{{form_start(form)}}
		{{form_row(form.username, {'label':'Identifiant', 'attr' : {'placeholder':"Votre identifiant"}})}}
		{{form_row(form.email, {'label':'Email', 'attr' : {'placeholder':"Votre email"}})}}
		{{form_row(form.password, {'label':'Mot de passe', 'attr' : {'placeholder':"Votre mot de passe"}})}}
		{{form_row(form.confirm_password, {'label':'Confirmation du mot de passe', 'attr' : {'placeholder':"Confirmer votre mot de passe"}})}}

		<button type="sumbit" class="btn btn-success ">
			Inscription !
		</button>
		{{form_end(form)}}


	</div>


{% endblock %}
