{% extends 'users_base.html.twig' %}


{% block body %}
{% if app.user %}

{% for message in  app.flashes('message')  %}
    <div class="col-xs4 container">
        <div class="p-3 my-2 rounded-2 success">{{message}}</div>
    </div>
{% endfor %}

<div class="container text-center ">
    <h1 class="cstm-title">Profil</h1>
 
<br><br>
<br><br>


 <div class="grix xs4 container ">
  <div class="col-xs1 self-center" >Identifiant : </div>
  <div class="col-xs3 self-center">{{app.user.username}}</div>
  <div class="col-xs1 self-center">Email : </div>
  <div class="col-xs3 self-center">{{app.user.email}}</div>
  <div class="col-xs1 self-center">Mot de passe : </div>
  <div class="col-xs3 self-center" >●●●●●●●●●●</div>
</div>
<br><br>
<div class="grix xs4 container ">
  <a href="{{path('users_pass_modifier')}}" class="btn shadow-1 rounded-1 blue">Modifier mon mot de passe</a>
  </div>
</div>

{% else %}

<p>Vous n'êtes pas autorisé</p>
{% endif %}
{% endblock %}